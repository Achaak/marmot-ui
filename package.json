{
  "name": "@pikas/monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/ui/*",
    "packages/utils/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/**/*",
    "build:docs-ui": "turbo run build --filter=@pikas-ui/docs...",
    "build:docs-utils": "turbo run build --filter=@pikas-utils/docs...",
    "clean": "turbo run clean node_modules",
    "dev": "turbo run dev --parallel",
    "dev:packages": "turbo run dev --parallel --filter=./packages/**/*",
    "dev:docs-ui": "turbo run dev --parallel --filter=@pikas-ui/docs...",
    "dev:docs-utils": "turbo run dev --parallel --filter=@pikas-utils/docs...",
    "start": "turbo run start --parallel",
    "start:docs-ui": "turbo run start --parallel --filter=@pikas-ui/docs...",
    "start:docs-utils": "turbo run start --parallel --filter=@pikas-utils/docs...",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "pre-lint": "turbo run pre-lint",
    "changeset": "changeset",
    "changeset:version": "changeset version -r && pnpm i",
    "changeset:release": "pnpm build:packages && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.4",
    "prettier": "^2.7.1",
    "turbo": "^1.5.1"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.9.5"
}
